{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block content %}
    <a href="{{ path('account_address_add') }}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1>Mes adresses</h1>
    C'est dans cet espace que vous allez pouvoir gÃ©rer vos adresses
    <a href="{{ path('account') }}">Retour</a>
    <hr>
    {% if app.user.addresses | length == 0 %}
        <p class="text-center">Vous n'avez pas encore d'adresse.</p>
    <a href="">Ajouter une adresse</a>
        {% else %}
            {% for address in app.user.addresses %}
            <div class="row">
                <div class="col-col-md-4">
                    <div class="card" style="width: 18rem;">

                        <div class="card-body">
                            <h5 class="card-title">{{ address.name }}</h5>
                            <p class="card-text">
                                {{ address.address }}, <br/>
                                {{ address.postal }} - {{ address.city }} - {{ address.country }}
                            </p>
                            <a href="{{ path('account_address_edit', {'id': address.id}) }}">Modifier</a> | <a href="{{path ('account_address_delete', {'id' : address.id}) }}">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>


        {% endfor %}
    {% endif %}

{% endblock %}
